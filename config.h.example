#ifndef CONFIG_H
#define CONFIG_H

// ============================================
// Mesh Network Configuration
// ============================================
// The mesh network allows ESP8266 nodes to communicate with each other
// All nodes must use the same MESH_PREFIX and MESH_PASSWORD

#define MESH_PREFIX     "YourMeshNetworkName"    // Change this to a unique name
#define MESH_PASSWORD   "YourSecurePassword123"  // Use a strong password (8+ characters)
#define MESH_PORT       5555                     // Default mesh port (usually no need to change)

// ============================================
// WiFi Station Configuration
// ============================================
// Required ONLY for HEM_Server_v0.3 (MQTT bridge)
// This connects the server to your home WiFi network

#define STATION_SSID     "YourWiFiNetworkName"   // Your WiFi SSID
#define STATION_PASSWORD "YourWiFiPassword"      // Your WiFi password

// ============================================
// MQTT Broker Configuration
// ============================================
// Required ONLY for HEM_Server_v0.3 (MQTT bridge)
// Configure your MQTT broker details

// MQTT Broker IP Address (e.g., Raspberry Pi running Mosquitto)
#define MQTT_BROKER_IP_1   192    // First octet
#define MQTT_BROKER_IP_2   168    // Second octet
#define MQTT_BROKER_IP_3   1      // Third octet
#define MQTT_BROKER_IP_4   42     // Fourth octet
// Complete IP: 192.168.1.42

// MQTT Credentials
#define MQTT_USER        "your_mqtt_username"    // MQTT broker username
#define MQTT_PASSWORD    "YourMQTTPassword123"   // MQTT broker password
#define MQTT_PORT        1883                     // Default MQTT port (1883 for non-TLS)

// MQTT Client ID (optional - leave as default or customize)
#define MQTT_CLIENT_ID   "HEM_Gateway"           // Unique client identifier

// ============================================
// MQTT Topics Configuration (Optional)
// ============================================
// Customize your MQTT topics if needed
#define MQTT_TOPIC_PREFIX "linky/"               // Prefix for all topics
#define MQTT_TOPIC_ALIVE "linky/ServerAlive"
#define MQTT_TOPIC_LDR "linky/LDR"
#define MQTT_TOPIC_INST_VA "linky/ConsoInstVA"
#define MQTT_TOPIC_MAX_VA "linky/maxConsoInstVA"
#define MQTT_TOPIC_15MIN "linky/WhPer15Minute"
#define MQTT_TOPIC_HOUR "linky/WhPerHour"

